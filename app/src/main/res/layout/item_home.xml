<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:layout_width="@dimen/dp_335"
    android:layout_height="@dimen/dp_450"
    android:layout_margin="@dimen/dp_20">
    <RelativeLayout
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_450">
    <ImageView
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_450"
        android:id="@+id/img"
        />
    <TextView
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_37"
        android:id="@+id/tv1"
        android:text="银座"
        android:textSize="@dimen/dp_26"
        android:textColor="@color/c_373737"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_27"/>
        <ImageView
            android:id="@+id/wei"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_12"
            android:layout_toRightOf="@id/tv1"
            android:layout_marginTop="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_8"
            />
        <TextView
            android:text="东京"
            android:id="@+id/tv2"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_999999"
            android:layout_toRightOf="@id/wei"
            android:layout_marginTop="@dimen/dp_39"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_20" />
        <TextView
            android:layout_width="@dimen/dp_132"
            android:layout_height="@dimen/dp_25"
            android:id="@+id/tv3"
            android:layout_below="@id/tv1"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="疯狂购物买买买"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/c_636363"/>
        <Button
            android:background="@mipmap/button_pay_particulars"
            android:id="@+id/btn1"
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_29"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_34"
            android:text="¥28.00"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/c_FFFFFF"
            />
        <TextView
            android:id="@+id/tv4"
            android:text="630购买"
            android:layout_width="@dimen/dp_61"
            android:layout_height="@dimen/dp_17"
            android:layout_below="@id/btn1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_4"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_636363"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>
